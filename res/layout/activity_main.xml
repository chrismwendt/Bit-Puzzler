        android:text="@string/btn_start"
        android:typeface="serif"
	    android:textStyle="bold"
	    android:textSize="30sp" />
     <Button android:id="@+id/btnScores"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
