	    android:textSize="50sp"
	    android:layout_weight="1"
	    android:typeface="serif"
	    android:textStyle="bold"/>

    <Button android:id="@+id/btnStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
